/**
 * @see https://bit.dev/reference/typescript/typescript-config
 */
{
  "extends": "@bitdev/react.react-env/config/tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "es2020",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true
  },
  "include": ["**/*", "**/*.json", ".mocharc.js", ".mocharc.cjs"],
  "exclude": [
    "artifacts",
    "public",
    "dist",
    "node_modules",
    "package.json",
    "**/*.cjs"
  ]
}
